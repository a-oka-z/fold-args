{
  "name": "fold-args",
  "version": "1.0.1",
  "description": "a named arguments parser with a consistent robust protocol; via `folding` JavaScript argumenets in the sense of the computer language Scheme",
  "main": "index.mjs",
  "type": "module",
  "exports": {
    "./common.js": {
      "default": "./index.cjs"
    },
    ".": {
      "import": "./index.mjs",
      "require": "./index.cjs"
    }
  },
  "scripts": {
    "test-es6": "NODE_OPTIONS='--experimental-vm-modules' jest compiler.test.mjs  index.test.mjs",
    "test-cs": "                                          jest compiler.test.cjs  index.test.cjs",
    "test-simple": "npm run make; npm run test-cs",
    "test": "npm run make; npm run test-cs; npm run test-es6",
    "make": "node ./make.js"
  },
  "files": [
    "README.md",
    "index.cjs",
    "index.mjs",
    "package.json"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "mjs",
      "cjs",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/*.test.[cm]js"
    ],
    "verbose": true
  },
  "author": {
    "name": "Atsushi Oka",
    "url": "https://github.com/a-oka-z/fold-args"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a-oka-z/fold-args"
  },
  "license": "ISC",
  "devDependencies": {
    "sqlmacro": "^0.1.0"
  }
}
